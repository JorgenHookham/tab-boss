{
	"manifest_version": 2,

	"name": "Tab Boss",
	"description": "Cycles through tabs based on configurable sequences and events.",
	"version": "1.0",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"storage"
	],
	"background": {
		"page": "background.html"
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["notifications.js"],
		"css": ["notifications.css"]
	}],
	"web_accessible_resources": [
		"coin.wav",
		"swanson.gif"
	]
}
